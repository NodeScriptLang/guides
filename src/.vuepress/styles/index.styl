:root {

  --sp: 8px;
  --sp2: calc(2 * var(--sp));
  --sp3: calc(3 * var(--sp));
  --sp4: calc(4 * var(--sp));
  --sp5: calc(5 * var(--sp));
  --sp6: calc(6 * var(--sp));
  --sp7: calc(7 * var(--sp));
  --sp8: calc(8 * var(--sp));
  --sp12: calc(12 * var(--sp));
  --sp16: calc(16 * var(--sp));
  --sp24: calc(24 * var(--sp));
  --sp32: calc(32 * var(--sp));
  --sphalf: calc(0.5 * var(--sp));

  --color-type-any: var(--color-base-3);
  --color-type-any-alt: var(--color-text-3);
  --color-type-null: var(--color-base-3);
  --color-type-null-alt: var(--color-text-3);
  --color-type-number: hsl(48deg, 80%, 60%);
  --color-type-number-alt: hsl(48deg, 100%, 40%);
  --color-type-integer: hsl(48deg, 80%, 60%);
  --color-type-integer-alt: hsl(48deg, 100%, 40%);
  --color-type-string: hsl(132deg, 50%, 70%);
  --color-type-string-alt: hsl(132deg, 40%, 50%);
  --color-type-boolean: hsl(192deg, 60%, 70%);
  --color-type-boolean-alt: hsl(192deg, 60%, 50%);
  --color-type-object: hsl(264deg, 60%, 80%);
  --color-type-object-alt: hsl(264deg, 40%, 65%);
  --color-type-array: hsl(320deg, 60%, 70%);
  --color-type-array-alt: hsl(320deg, 60%, 60%);

  --color-base-0: hsl(200deg, 10%, 100%);
  --color-base-1: hsl(200deg, 10%, 96%);
  --color-base-2: hsl(200deg, 10%, 92%);
  --color-base-3: hsl(200deg, 10%, 85%);

  --color-text-0: hsl(200deg, 10%, 20%);
  --color-text-1: hsl(200deg, 10%, 40%);
  --color-text-2: hsl(200deg, 10%, 55%);
  --color-text-3: hsl(200deg, 10%, 68%);

  --color-highlight-0: hsl(48deg, 90%, 90%);
  --color-highlight-1: hsl(48deg, 90%, 75%);
  --color-highlight-2: hsl(32deg, 90%, 65%);
  --color-highlight-3: hsl(32deg, 90%, 50%);

  --color-focus-0: hsl(205deg, 75%, 95%);
  --color-focus-1: hsl(205deg, 75%, 85%);
  --color-focus-2: hsl(205deg, 75%, 75%);
  --color-focus-3: hsl(205deg, 75%, 65%);

  --color-success-0: hsl(120deg, 50%, 90%);
  --color-success-1: hsl(120deg, 50%, 75%);
  --color-success-2: hsl(120deg, 50%, 50%);
  --color-success-3: hsl(120deg, 50%, 40%);

  --color-danger-0: hsl(0deg, 75%, 90%);
  --color-danger-1: hsl(0deg, 75%, 70%);
  --color-danger-2: hsl(0deg, 75%, 60%);
  --color-danger-3: hsl(0deg, 75%, 50%);

  --color-primary: hsl(205deg, 85%, 45%);
  --color-primary-text: #fff;

  --color-warn: var(--color-highlight-3);
  --color-warn-text: #000;

  --color-danger: var(--color-danger-2);
  --color-danger-text: #fff;
}

html.dark {
    --color-base-0: hsl(200deg, 15%, 16%);
    --color-base-1: hsl(200deg, 15%, 24%);
    --color-base-2: hsl(200deg, 15%, 32%);
    --color-base-3: hsl(200deg, 15%, 40%);

    --color-text-0: hsl(200deg, 15%, 85%);
    --color-text-1: hsl(200deg, 15%, 75%);
    --color-text-2: hsl(200deg, 15%, 60%);
    --color-text-3: hsl(200deg, 15%, 50%);

    --color-highlight-0: hsl(48deg, 50%, 30%);
    --color-highlight-1: hsl(48deg, 50%, 40%);
    --color-highlight-2: hsl(48deg, 50%, 50%);
    --color-highlight-3: hsl(48deg, 50%, 60%);

    --color-focus-0: hsl(205deg, 50%, 25%);
    --color-focus-1: hsl(205deg, 50%, 35%);
    --color-focus-2: hsl(205deg, 50%, 45%);
    --color-focus-3: hsl(205deg, 50%, 55%);
}

html {
  background: var(--color-base-0);
  color: var(--color-text-0);
}

body {
  font-size: 16px;
  font-family: "Fira Sans", sans-serif;
}

a {
  color: var(--color-primary);
  font-weight: 400;
}

h1, h2, h3, h4, h5, h6, strong {
  font-weight: 500;
}

code, kbd {
  font-family: "Fira Code", sans-serif;
  font-size: 14px;
}

.theme-container {

  .navbar .site-name {
    font-size: 18px;
    font-weight: 400;
  }

  .sidebar, .sidebar-link {
    font-size: 16px;
  }

  .sidebar-heading {
    font-size: 16px;
  }

  .sidebar-heading.clickable.active, a.sidebar-link.active, .sidebar-heading {
    font-weight: 500;
  }

}

.theme-container.page-wide .theme-default-content {
  max-width: 1024px;
}

.info {
  position: relative;
  padding: 16px;
  background: var(--color-base-1);
  border-left: 4px solid var(--color-focus-3);
}

.info::before {
  content: 'i';
  position: absolute;
  top: -8px;
  left: -10px;
  width: 16px;
  height: 16px;
  background var(--color-focus-3);
  color: var(--color-base-0);
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font: 900 italic 12px Georgia, serif;
}

.good, .bad {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 0.5rem;
  width: 40px;
  font-size: 0.85em;
  border-radius: 3px;
}

.good {
  background: var(--color-success-2);
  color: #fff;
}

.bad {
  background: var(--color-danger-2);
  color: #fff;
}

table {
  line-height: 1.5;
}

tr:nth-child(2n) {
  background: none;
}
